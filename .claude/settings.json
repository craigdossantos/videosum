{
  "permissions": {
    "allow": [
      "Read(//Users/craigdossantos/.claude/ai-dev-tasks/**)",
      "Bash(mkdir:*)",
      "Bash(git rev-parse:*)",
      "Bash(git init:*)",
      "Read(//Users/craigdossantos/.claude/**)",
      "Bash(git add:*)",
      "Bash(git reset:*)",
      "Bash(git commit:*)",
      "Bash(cat:*)",
      "Bash(git checkout:*)",
      "Bash(npx create-next-app:*)",
      "Bash(mv *.md .env.example AGENTS.md .temp-docs/)",
      "Read(//private/tmp/**)",
      "Bash(npm init:*)",
      "Bash(npm install:*)",
      "Bash(npx tailwindcss:*)",
      "Bash(npx:*)",
      "Bash(timeout 15 npm run dev:*)",
      "Bash(lsof:*)",
      "Bash(xargs kill:*)",
      "Bash(git clone:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run dev:*)",
      "Bash(npm uninstall:*)",
      "Bash(chmod:*)",
      "Bash(python3:*)",
      "Bash(git merge:*)"
    ],
    "deny": [
      "Run:sudo",
      "Access:systemOutsideRepo"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate_bash.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate_file_write.py"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate_bash.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate_file_write.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/format_and_lint.py"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    }
  }
}
